#include <stdio.h>

int main() {
    int category, age;
    int premium = 0;

    // Input
    scanf("%d", &category);
    scanf("%d", &age);

    switch(category) {
        case 1:  // Two Wheeler
            if (age <= 5)
                premium = 1500;
            else
                premium = 2500;
            break;

        case 2:  // Four Wheeler
            if (age <= 5)
                premium = 4000;
            else
                premium = 6000;
            break;

        default:
            printf("Invalid Category\n");
            return 0;
    }

    printf("â‚¹%d\n", premium);

    return 0;
}
