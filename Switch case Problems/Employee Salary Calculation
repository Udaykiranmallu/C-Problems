#include <stdio.h>

int main() {
    int code, experience;
    int baseSalary = 0;
    int bonus = 0;
    int totalSalary;

    // Input
    scanf("%d", &code);
    scanf("%d", &experience);

    // Base salary using switch-case
    switch(code) {
        case 1:
            baseSalary = 50000;   // Developer
            break;
        case 2:
            baseSalary = 35000;   // Tester
            break;
        default:
            printf("Invalid designation code\n");
            return 0;
    }

    // Bonus calculation
    if (experience >= 3) {
        bonus = experience * 5000;
    }

    // Total salary
    totalSalary = baseSalary + bonus;

    printf("Salary â‚¹%d\n", totalSalary);

    return 0;
}
